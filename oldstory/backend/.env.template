# OpenAI API Key
OPENAI_API_KEY=your-openai-api-key-here

# Google Gemini API Key
GEMINI_API_KEY=your-gemini-api-key-here

# Supabase Configuration (if using)
SUPABASE_URL=your-supabase-url
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Database URL (if using direct PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/MeshMemory

# Redis URL (for caching)
REDIS_URL=redis://localhost:6379

# Encryption key for API keys (32 bytes, base64-encoded)
ENCRYPTION_KEY=your-32-byte-encryption-key-base64-encoded

# Environment
ENVIRONMENT=development

